<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pial.newtonslaw.exploreNewton"
    android:background="@drawable/appletree"
    tools:showIn="@layout/activity_explore_newton">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lawid"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/lawgravity"
        android:background="@null"
        android:layout_margin="10dp"
        android:onClick="onClickLaw"
        android:contentDescription="explainlaw" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/explainid"
        android:src="@drawable/explain"
        android:background="@null"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/lawid"
        android:layout_alignRight="@+id/lawid"
        android:onClick="onClickExplain"
        android:layout_alignEnd="@+id/lawid" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/realid"
        android:src="@drawable/reallife"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/problemid"
        android:src="@drawable/problem"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/explainid"
        android:layout_alignEnd="@+id/explainid"
        android:layout_marginBottom="99dp"
        android:onClick="onClickProblem"/>

</RelativeLayout>
